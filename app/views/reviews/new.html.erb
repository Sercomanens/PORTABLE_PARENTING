<div class="container my-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <% if notice.present? %>
        <div class="alert alert-success">
          <%= notice %>
        </div>
      <% end %>

      <h1 class="mb-4">New Review for <%= @item.name %></h1>

      <%= simple_form_for([@item, @item.reviews.build]) do |f| %>
        <div class="form-inputs">
          <div class="form-group">
            <%= f.input :content, input_html: { class: 'form-control' }, wrapper_html: { class: 'mb-3' } %>
          </div>
          <div class="form-group">
            <%= f.input :rating, collection: 1..5, prompt: 'Select Rating', input_html: { class: 'form-control' }, wrapper_html: { class: 'mb-3' } %>
          </div>
        </div>

        <div class="form-actions d-flex justify-content-between">
          <%= f.button :submit, 'Finish', class: 'btn btn-success' %>
          <%= link_to 'Back', item_path(@item), class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

