<div class="container my-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="mb-4">Rent <%= @item.name %></h1>

      <%= simple_form_for [@item, @rental] do |f| %>
        <div class="form-inputs">
          <div class="form-group mb-3">
            <%= f.input :start_date, input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group mb-3">
            <%= f.input :end_date, input_html: { class: 'form-control' } %>
          </div>
          <div class="form-group mb-3">
            <%= f.input :status, input_html: { class: 'form-control' } %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: 'btn btn-success' %>
          <%= link_to 'Back', rentals_path, class: 'btn btn-secondary ml-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

