<h1>Edit Rental</h1>

<%= simple_form_for [@item, @rental] do |f| %>
  <div class="form-inputs">
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Back', rentals_path %>
