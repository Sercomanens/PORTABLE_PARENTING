<div class="container my-5">
  <h1 class="mb-4">My Rentals</h1>

  <table class="table table-striped table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Item</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @rentals.each do |rental| %>
        <tr>
          <td><%= rental.item.name %></td>
          <td><%= rental.start_date %></td>
          <td><%= rental.end_date %></td>
          <td><%= rental.status %></td>
          <td><%= link_to 'Show', rental, class: 'btn btn-info btn-sm' %></td>
          <td><%= link_to 'Edit', edit_item_rental_path(rental.item, rental), class: 'btn btn-warning btn-sm' %></td>
          <td><%= link_to 'Destroy', rental, data: { turbo_method: :delete, confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-3">
    <%= link_to 'Back', items_path, class: 'btn btn-secondary' %>
  </div>
</div>

