<div class='container my-4 position-fixed'id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-body form-login ">
    <button  data-action="click->modal-sign-in#toggle" class="dropdown-item" id="close-button-1">Close</button>
    <%= simple_form_for(User.new, as: :user, url: registration_path(:user)) do |f| %>
      <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%# <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
    <% end %>
    <%= render "devise/shared/links", resource_name: :user, devise_mapping: Devise.mappings[:user] %>
  </div>
</div>
