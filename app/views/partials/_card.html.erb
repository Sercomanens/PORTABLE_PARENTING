<div class="card-trip my-3 card" data-controller="card" data-action="click->card#navigate" data-card-url-value="<%= item_path(item) %>">
  <% if item.photos.attached? %>
    <%= cl_image_tag item.photos.first.key, height:300, crop: :fill, class: "card-img-top", alt: "Card image cap" %>
  <% else %>
    <img class="card-img-top" src="<%= asset_path('default-avatar.avif') %>" alt="Card image cap">
  <% end %>
  <div class="card-trip-infos">
    <div class="card-trip-infos-inner">
      <h2 class="item-name"><%= item.name %></h2>
      <p class="item-description"><%= item.description %></p>
    </div>
    <div class="d-flex">
      <h2 class="card-trip-pricing mb-0"><%= item.price %> â‚¬</h2>
      <% if  item.user.photo.attached? %>
        <%= cl_image_tag item.user.photo.key, height: 50, width: 50, crop: :fill, class: "rounded-circle shadow border", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% else %>
        <img class="avatar dropdown-toggle rounded-circle shadow border" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="<%= asset_path('default-avatar.avif') %>" />
      <% end %>
    </div>
  </div>
</div>
