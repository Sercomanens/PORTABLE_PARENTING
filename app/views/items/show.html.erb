<div class="container my-5">
  <div class="row" data-controller="toggle-form">
    <div class="col-md-8 offset-md-2">
      <h1 class="mb-3"><%= @item.name %></h1>
      <p class="text-muted"><%= @item.description %></p>
      <p class="h4 text-success"><%= number_to_currency(@item.price) %></p>
      <% if @item.photos.attached? %>
        <% @item.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, class: 'mb-4', crop: :fill %>
        <% end %>
      <% end %>
      <div class="mb-4">
        <% if current_user.owner_of?(@item) %>
          <%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-warning' %>
        <% end %>
        <% unless current_user.owner_of?(@item) %>
          <%= link_to 'Rent this item', new_item_rental_path(@item), class: 'btn btn-secondary' %>
        <% end %>
        <button data-action="click->toggle-form#fire" class="btn btn-primary">
          Write a review
        </button>
      </div>
      <% unless current_user.owner_of?(@item) %>
      <!-- This is the element to be toggled -->
      <div data-toggle-form-target="togglableElement" class="d-none">
        <%= simple_form_for([@item, @review]) do |f| %>
          <div class="form-group">
            <%= f.input :content, input_html: { class: 'form-control' }, wrapper_html: { class: 'mb-3' }, label: "Your Review" %>
          </div>
          <div class="form-group">
            <%= f.input :rating, collection: 1..5, prompt: 'Select Rating', input_html: { class: 'form-control' }, wrapper_html: { class: 'mb-3' }, label: "Rating" %>
          </div>
          <div class="form-actions d-flex justify-content-between">
            <%= f.button :submit, 'Finish', class: 'btn btn-success' %>
            <%= link_to 'Back', item_path(@item), class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
      <% end %>
      <div style="width: 100%; height: 600px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

      <h2 class="mt-5">Reviews</h2>
      <% if @item.reviews.any? %>
        <% @item.reviews.each do |review| %>
          <div class="card mb-3">
            <div class="card-body">
              <% if review.user %>
                <h5 class="card-title"><%= review.user.email %></h5>
              <% else %>
                <h5 class="card-title">Anonymous</h5>
              <% end %>
              <p class="card-text"><%= review.content %></p>
              <p class="card-text"><small class="text-muted">Rating: <%= review.rating %></small></p>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-muted">No reviews yet.</p>
      <% end %>

      <div class="mt-4">
        <%= link_to 'Back to Items', items_path, class: 'btn btn-secondary' %>
        <%= link_to "Home page", root_path, class: 'btn btn-primary'  %>
      </div>
    </div>
  </div>
</div>
