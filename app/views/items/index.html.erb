  <div class="mb-3">
    <%= link_to 'New Item', new_item_path, class: 'btn btn-primary' %>
  </div>

  <ul class="list-group">
    <% @items.each do |item| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <%= link_to item.name, item, class: 'text-decoration-none' %> - <%= item.description %> - <%= number_to_currency(item.price) %>
        </div>
        <div>
          <%= link_to 'Edit', edit_item_path(item), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', item, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </div>
      </li>
    <% end %>
  </ul>

  <div class="mt-3">
    <%= link_to 'Log out', destroy_user_session_path, data: { turbo_method: :delete }, class: 'btn btn-secondary' %>
    <%= link_to "Home page", root_path, class: 'btn btn-primary'  %>
  </div>
</div>
